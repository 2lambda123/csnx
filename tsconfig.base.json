{
	"extends": "./libs/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2017", "dom"],
		"paths": {
			"@guardian/nrwl-rollup": ["libs/nrwl-rollup/src/index.ts"],
			"@guardian/gu-rollup": ["libs/gu-rollup/src/index.ts"],
			"@guardian/tsconfig": ["libs/tsconfig"]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"sourceMap": true
	},
	"exclude": ["node_modules", "tmp"]
}
